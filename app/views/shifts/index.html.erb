<h3>Shifts</h3>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Employee name</th>
      <th>Shift date</th>
      <th>Start time</th>
      <th>Finish time</th>
      <th>Break(hours)</th>
      <th>Hours worked</th>
      <th>Shift cost</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <%=@shift_time%>
 



  <tbody>
    <% @shifts.each do |shift| %>
      
      <tr>
        <td><%= shift.Employee_name %></td>
        <td><%= shift.Shift_date.strftime("%d-%m-%y") %></td>
        <td><%= shift.Start_time.strftime("%H:%M") %></td>
        <td><%= shift.Finish_time.strftime("%H:%M") %></td>
        <td><%= shift.Break_length %></td>
       
        

        <td><%= shift.hours_worked %></td>
        <td><%=  %></td>
        <td><%= link_to 'Show', shift %></td>
        <td><%= link_to 'Edit', edit_shift_path(shift) %></td>
        <td><%= link_to 'Destroy', shift, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    
  </tbody>
</table>

